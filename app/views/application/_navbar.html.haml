%header#header
  
		
  .header-middle
    / header-middle
    .container
      .row
        .col-sm-4
          .logo.pull-left
            %a{:href => "/"}
              %img{:alt => "", :src => asset_path("logo/17.png") }/
        .col-sm-5.pull-right
          .logo.pull-right
            %h4.phone_number 
              %b
                %i.fa.fa-phone.phone-size
                %img{:alt => "", :class =>"margin-logo", :src => asset_path("logo/phone.png") }/
                %br с 9.00-21.00 без выходных
            
        
   
         
        
  / /header-middle
  .header-bottom
    / header-bottom
    #nav.container(data-spy="affix" data-offset-top="200")
      .row
        .col-sm-12
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %i.fa.fa-dashboard.fa-border.fa-2x
          .mainmenu.pull-left
            %ul.nav.navbar-nav.collapse.navbar-collapse
              %li
                =link_to "Главная", root_path
              %li.dropdown
                %a{:href => "#"}
                
                  Каталог
                  %i.fa.fa-angle-down
                %ul.sub-menu{:role => "menu"}
                  -cache ['types', @types] do
                    - @types.all.each do |type|
                      -cache ['entry_type', type] do
                        %li
                          =link_to type.name.mb_chars.capitalize.to_s,type_path(type)
                  %li
                    =link_to "Kлей для обоев", clue_types_path
                 
             
              %li
                =link_to  "О нас", about_path
              %li
                =link_to "Доставка и Оплата", delivery_path
              %li
                =link_to "Контакты", contact_path
              %li#current_item
                = link_to cart_path do
                 
                  %i.fa.fa-shopping-cart
                  Корзина
               
          .col-sm-4.col-xs-4.pull-right.search_container
            .search_box.pull-right
              = form_tag(product_index_path, :method => "get", id: "search-form") do
                = text_field_tag :search, params[:search], placeholder: "артикул или название"
                %button.btn.btn-default.search-button(type="submit") Поиск
          
              
