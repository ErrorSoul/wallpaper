
.col-sm-4
  .product-image-wrapper
    .single-products
      .productinfo.text-center
        =link_to image_tag(item.asset.url, :class => "product-image"), product_path(item)
        %h2= "#{item.price} P"
        %p
          = link_to item.title, product_path(item)
        
        
        %button.btn.btn-default.add-to-cart{:type => "button"}
          %i.fa.fa-shopping-cart>
          В корзину
