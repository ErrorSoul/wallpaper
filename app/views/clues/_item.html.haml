
.col-sm-4
  .product-image-wrapper
    .single-products
      .productinfo.text-center
        =link_to image_tag(item.asset.url, :class => "product-image"), clue_path(item)
        %h2= "#{number_to_currency(item.price, :unit => " ")}"
        
        %p
          = link_to item.title, clue_path(item)
        
        
        %button.btn.btn-default.add-to-cart(type="button" ng-click="add_to_cart(#{item.id}, 'Clue')")
          %i.fa.fa-shopping-cart>
          В корзину
